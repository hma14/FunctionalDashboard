@model FunctionalDashboard.Dal.DataEntity.SyncUtilityEventLog


@{
    ViewBag.Title = "XML Data";
}

<link rel="stylesheet" href="~/Content/popBox.css" type="text/css" />
<script src="~/Scripts/popBox.js" type="text/javascript"></script>
<script src="~/Scripts/Common.js" type="text/javascript"></script>
<script src="~/Scripts/EventsProgramUpass.js" type="text/javascript"></script>
<script src="~/Scripts/KnowledgeBasePopup.js" type="text/javascript"></script>


@if (ViewBag.Message != null)
{
    <p style="color: red;">Error: @ViewBag.Message</p>
}


<h5>XML Data</h5>

<div id="xmldata">

    @if (Model != null)
    {
        <table class="table">
            <caption class="caption">XML DATA on Category = <span style="color: red">'@Model.Category'</span></caption>
            
            <tr>
                <td class="bold">Category (<span class="event_id_bold">id</span>)</td>
                <td>
                    @Model.Category (<span class="event_id_bold">@Model.CategoryID</span>)
                </td>
            </tr>
            <tr>
                <td class="bold">Event (<span class="event_id_bold">id</span>)</td>
                <td>
                    <a href="#" id="event1"  data-id2="@Model.Category"      data-id3="@Model.CategoryID" 
                                             data-id4="@Model.Event"         data-id5="@Model.EventID" 
                                             data-id6="@User.Identity.Name"          data-id7="@DateTime.Now"> 
                                            @Model.Event (<span class="event_id_bold">@Model.EventID</span>)
                    </a>
                </td>
            </tr>
            <tr>
                <td class="bold">SyncID</td>
                <td>
                    @Model.SyncId
                </td>
            </tr>
            <tr>
                <td class="bold">Benefit (<span class="event_id_bold">id</span>)</td>
                @if (!(string.IsNullOrEmpty(Model.BenefitName) || Model.BenefitId == 0))
                {
                    <td>
                        @Model.BenefitName (<span class="event_id_bold">@Model.BenefitId</span>)
                    </td>
                }
                else
                {
                    <td></td>
                }
            </tr>

            <tr>
                <td class="bold">Process Datetime</td>
                <td>
                    @Model.ProcessDatetime
                </td>
            </tr>
            <tr>
                <td class="bold">Process Datetime (Precision In Milliseconds)</td>
                <td>
                   @Model.ProcessDatetime.ToString("yyyy-MM-dd HH:mm:ss.fff", System.Globalization.CultureInfo.InvariantCulture)
                </td>
            </tr>
            <tr>
                <td class="bold">Log Level</td>
                <td>
                    @Model.Level 
                </td>
            </tr>

            <tr>
                <td class="bold">Error/Info ID</td>
                @if (!String.IsNullOrEmpty(Model.ProcessErrorID) && Model.ProcessErrorID != "0" && Model.ProcessErrorID != "996")
                {
                    <td class="errors">
                        @Model.ProcessErrorID
                    </td>
                }
                else
                {
                    <td class="non-error">
                        @Model.ProcessErrorID
                    </td>
                }
            </tr>
            <tr>
                <td class="bold">Error/Info Descr</td>
                @if (!String.IsNullOrEmpty(Model.ProcessErrorDescr) && Model.ProcessErrorID != "0" && Model.ProcessErrorID != "996")
                {
                    <td class="errors">
                        @Model.ProcessErrorDescr
                    </td>
                }
                else
                {
                    <td class="non-error">
                        @Model.ProcessErrorDescr
                    </td>
                }
            </tr>


            @if (!String.IsNullOrEmpty(Model.StackTrace))
            {
                <tr>
                    <td class="bold">StackTrace</td>
                    <td class="errors">
                        @Model.StackTrace
                    </td>
                </tr>
            }


        </table>
    }

</div>
