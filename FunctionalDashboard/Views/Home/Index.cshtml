@model PagedList.IPagedList<FunctionalDashboard.ViewModels.LogErrors>

@using PagedList.Mvc;
@using PagedList;

@{
    ViewBag.Title = "Monitor";
}

<script type="text/javascript">

    function tabClicked() {
        $('#tabs').click('tabsselect', function (event, ui) {

            var value = $("#tabs").tabs('option', 'active');

            if (sessionStorage) {
                sessionStorage.setItem("SelectedTab", value.toString())
            }
        });
    }

    $(function () {
        if (sessionStorage) {
            $("#tabs").tabs({ active: sessionStorage.getItem("SelectedTab") })
        }
        else {
            $("#tabs").tabs()
        }
    });

</script>


<div class="demo">

    <div id="tabs">
        <ul>
            <li><a href="#tabs-1" onclick="tabClicked()">Error Monitor</a></li>
            <li><a href="#tabs-2" onclick="tabClicked()">Files</a></li>
            <li><a href="#tabs-3" onclick="tabClicked()">CUBIC Web Services</a></li>
            <li><a href="#tabs-4" onclick="tabClicked()">Applications</a></li>
        </ul>
        <div id="tabs-1">
            <div id="updateArea1">
                @Html.Partial("_PartialTabMonitorSLTAlerts", null)
            </div>
            <div id="updateArea">
                @Html.Partial("_PartialTabMonitor", Model)
            </div>
        </div>
        <div id="tabs-2">
            <div id="updateArea2">
                @Html.Partial("_PartialTabFiles", Model)
            </div>
        </div>
        <div id="tabs-3">
            <div id="updateArea3">
                @Html.Partial("_PartialTabWS", Model)
            </div>
        </div>
        <div id="tabs-4">   
            <div id="updateArea41">
                @Html.Partial("_PartialTabApp1", null)
            </div>
            <div id="updateArea42">
                @Html.Partial("_PartialTabApp2", null)
            </div>      
            <div id="updateArea43">
                @Html.Partial("_PartialTabApp3", Model)
            </div>
        </div>
    </div>
</div>


