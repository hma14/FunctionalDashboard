@model FunctionalDashboard.ViewModels.UpassProgramWebService
@using FunctionalDashboard.Models
@using FunctionalDashboard.Controllers


@{
    Layout = null;
}


@{
    if (Model != null)
    {
        int i = 0;
        foreach (var evt in Model.Events)
        {
            if (i > Logs.DropDwonListLength)
            {
                break;
            }   
            i++;
            
            if (evt.LogLevel == EVENT_STATUS.ERROR || evt.LogLevel == EVENT_STATUS.WARNING)
            {
                
                @Html.ActionLink(string.Format("{0} ({1})",
                                            evt.Event, evt.EventID) as string,
                                            "Index",
                                            "XmlDataUpassWS",
                                            new
                                            {
                                                ID = evt.ID,
                                                //program = Model.Program,
                                                //processTimeTicks = evt.ProcessTime.Ticks,
                                                //category = Model.Category,
                                                //eventID = evt.EventID,
                                                //uri = evt.URI,
                                                //guid = evt.GUID,
                                                //taskID = evt.TaskID,
                                                //level = evt.LogLevel
                                            },
                                            new { @class = "error_links" })

            }
            else if (evt.LogLevel == EVENT_STATUS.ACKNOWLEDGED)
            {
                @Html.ActionLink(string.Format("{0} ({1})",
                                            evt.Event, evt.EventID) as string,
                                            "Index",
                                            "XmlDataUpassWS",
                                            new
                                            {
                                                ID = evt.ID,
                                                //program = Model.Program,
                                                //processTimeTicks = evt.ProcessTime.Ticks,
                                                //category = Model.Category,
                                                //eventID = evt.EventID,
                                                //uri = evt.URI,
                                                //guid = evt.GUID,
                                                //taskID = evt.TaskID,
                                                //level = evt.LogLevel
                                            },
                                            new { @class = "ack_links" })

            }
            else if (evt.LogLevel == EVENT_STATUS.CLEARED)
            {
                @Html.ActionLink(string.Format("{0} ({1})",
                                            evt.Event, evt.EventID) as string,
                                            "Index",
                                            "XmlDataUpassWS",
                                            new
                                            {
                                                ID = evt.ID,
                                                //program = Model.Program,
                                                //processTimeTicks = evt.ProcessTime.Ticks,
                                                //category = Model.Category,
                                                //eventID = evt.EventID,
                                                //uri = evt.URI,
                                                //guid = evt.GUID,
                                                //taskID = evt.TaskID,
                                                //level = evt.LogLevel
                                            },
                                            new { @class = "warning_links" })

            }
            else
            {
                //if (i > Logs.DropDwonListLength)
                //{
                //    continue;
                //}                                       
                @Html.ActionLink(string.Format("{0} ({1})",
                                            evt.Event, evt.EventID) as string,
                                            "Index",
                                            "XmlDataUpassWS",
                                            new
                                            {
                                                ID = evt.ID,
                                                //program = Model.Program,
                                                //processTimeTicks = evt.ProcessTime.Ticks,
                                                //category = Model.Category,
                                                //eventID = evt.EventID,
                                                //uri = evt.URI,
                                                //guid = evt.GUID,
                                                //taskID = evt.TaskID,
                                                //level = evt.LogLevel
                                            },
                                            null)
            }
            <br />
        }
    }
}
